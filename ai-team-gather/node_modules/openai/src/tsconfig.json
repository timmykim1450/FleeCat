{
  // this config is included in the published src directory to prevent TS errors
  // from appearing when users go to source, and VSCode opens the source .ts file
  // via declaration maps
  "include": ["index.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true
  }
}
